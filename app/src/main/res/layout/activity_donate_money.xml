<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stefy.idonate.DonateMoney">
    <TextView
        android:id="@+id/donateclothesTextView"
        android:text="Παρακαλώ Επιλέξτε "
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.103"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/amountTextEdit"
        app:layout_constraintVertical_bias="0.0" />
        <TextView
            android:id="@+id/myPayPalText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/amountTextEdit"
            android:hint="Εισάγετε ποσό"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginTop="44dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerF" />


        <Button
            android:id="@+id/payPalButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Donate!"
            android:textSize="30sp"
            android:layout_marginTop="85dp"
            app:layout_constraintTop_toBottomOf="@+id/amountTextEdit"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

    <Spinner
        android:id="@+id/spinnerF"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@+id/donateclothesTextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />


</android.support.constraint.ConstraintLayout>
